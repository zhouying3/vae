import matplotlib.pyplot as plt
from sklearn.decomposition import PCA
from sklearn.datasets import load_iris

#data = load_iris()

x = np.row_stack((x_train_positive,gene,x_train_negative))
pca = PCA(n_components=2)
reduced_x = pca.fit_transform(x)

for i in range(len(reduced_x)):
    if i<x_train_positive.shape[0]:                                                     #negative
        plt.scatter(reduced_x[i][0],reduced_x[i][1],c='r')
    elif i<x_train_positive.shape[0]+gene.shape[0]:                                                   #positive
        plt.scatter(reduced_x[i][0],reduced_x[i][1],c='g')
    else:                                                            #gene
        plt.scatter(reduced_x[i][0],reduced_x[i][1],c='b')
plt.show()